{
  "Conditions": {
    "$FitHeight": "DetectedAspectRatio < 178",
    "$FitWidth": "(DetectedAspectRatio >= 178) && (DetectedAspectRatio <= 200)",
    "$FitNative": "DetectedAspectRatio > 200",
    "$HDR": "SourceDynamicRange == 'HDR'",
    "$Is3D": "(Source3DMode != 'Undefined') && (Source3DMode == 'Off')",
    "$IsMovieSource": "(PhysicalInputSelected == 1) || (PhysicalInputSelected == 3) || (PhysicalInputSelected == 5) || (PhysicalInputSelected == 7)"
  },
  "Rules": [
    {
      "Name": "SwitchToFitHeight",
      "Condition": "$IsMovieSource && !$Is3D && $FitHeight",
      "Actions": [
        {
          "RadiancePro.Send": "c"
        }
      ]
    },
    {
      "Name": "SwitchToFitWidth",
      "Condition": "$IsMovieSource && !$Is3D && $FitWidth",
      "Actions": [
        {
          "RadiancePro.Send": "b"
        }
      ]
    },
    {
      "Name": "SwitchToNative",
      "Condition": "$IsMovieSource && !$Is3D && $FitNative",
      "Actions": [
        {
          "RadiancePro.Send": "a"
        }
      ]
    },
    {
      "Name": "SwitchToSDR",
      "Condition": "!$Is3D && !$HDR",
      "Actions": [
        {
          "SonyCledis.PictureMode": "Mode1"
        }
      ]
    },
    {
      "Name": "SwitchToHDR",
      "Condition": "!$Is3D && $HDR",
      "Actions": [
        {
          "SonyCledis.PictureMode": "Mode2"
        }
      ]
    }
  ]
}