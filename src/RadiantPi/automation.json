{
  "Conditions": {
    "$FitHeight": "DetectedAspectRatio < 178",
    "$FitWidth": "(DetectedAspectRatio >= 178) && (DetectedAspectRatio <= 200)",
    "$FitNative": "DetectedAspectRatio > 200",
    "$HDR": "SourceDynamicRange == 'HDR'",
    "$Is3D": "(Source3DMode != 'Undefined') && (Source3DMode == 'Off')",
    "$IsGameSource": "(PhysicalInputSelected == 2) || (PhysicalInputSelected == 4) || (PhysicalInputSelected == 6) || (PhysicalInputSelected == 8)"
  },
  "Rules": [
    {
      "Name": "SwitchToFitHeight",
      "Condition": "!$IsGameSource && !$Is3D && $FitHeight",
      "Actions": [
        {
          "RadiancePro.Send": "c"
        }
      ]
    },
    {
      "Name": "SwitchToFitWidth",
      "Condition": "!$IsGameSource && !$Is3D && $FitWidth",
      "Actions": [
        {
          "RadiancePro.Send": "b"
        }
      ]
    },
    {
      "Name": "SwitchToNative",
      "Condition": "!$IsGameSource && !$Is3D && $FitNative",
      "Actions": [
        {
          "RadiancePro.Send": "a"
        }
      ]
    },
    {
      "Name": "SwitchToSDR",
      "Condition": "!$Is3D && !$HDR",
      "Actions": [
        {
          "SonyCledis.Input": "Hdmi1"
        },
        {
          "SonyCledis.PictureMode": "Mode1"
        }
      ]
    },
    {
      "Name": "SwitchToHDR",
      "Condition": "!$Is3D && $HDR",
      "Actions": [
        {
          "SonyCledis.Input": "Hdmi1"
        },
        {
          "SonyCledis.PictureMode": "Mode2"
        }
      ]
    },
    {
      "Name": "SwitchTo3D",
      "Condition": "$Is3D",
      "Actions": [
        {
          "SonyCledis.Input": "Hdmi2"
        },
        {
          "SonyCledis.PictureMode": "Mode3"
        }
      ]
    }
  ]
}