<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">RadiantPi</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Status
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="input-labels">
                <span class="oi oi-align-left" aria-hidden="true"></span> Input Labels
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="custom-mode-labels">
                <span class="oi oi-align-left" aria-hidden="true"></span> Custom Mode Labels
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="cms-labels">
                <span class="oi oi-align-left" aria-hidden="true"></span> CMS Labels
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="style-labels">
                <span class="oi oi-align-left" aria-hidden="true"></span> Style Labels
            </NavLink>
        </li>
    </ul>
</div>

@code {

    //--- Fields ---
    private bool collapseNavMenu = true;

    //--- Properties ---
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    //--- Methods ---
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
}
