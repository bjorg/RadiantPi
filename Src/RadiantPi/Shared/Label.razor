@inherits LayoutComponentBase

<div class="row g-3 align-items-center">
    <div class="col-auto">
        <label for=@Id class="col-form-label">@Text</label>
    </div>
    <div class="col-auto">
        <input class="form-control" id=@Id @bind=Value>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary" @onclick="ButtonClickedAsync" @onclick:preventDefault>Set</button>
    </div>
</div>

@code {

    //--- Properties ---

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    //--- Methods ---
    private async Task ButtonClickedAsync() => await ValueChanged.InvokeAsync(Value);
}